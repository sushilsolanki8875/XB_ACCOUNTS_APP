<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acashcreditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/editcashcreditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acashcreditNameLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan" />

        <Spinner
            android:id="@+id/spinnercashcreditNameLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSTLoan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acashcreditSTLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ST loan Amount" />

        <EditText
            android:id="@+id/editcashcreditSTLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearMTLoan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/acashcreditMTLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MT loan Amount" />

        <EditText
            android:id="@+id/editcashcreditMTLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acashcreditNameHissa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hissa" />

        <EditText
            android:id="@+id/editcashcreditNameHissa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acashcreditNameAmanat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amanat" />

        <EditText
            android:id="@+id/editcashcreditNameAmanat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>