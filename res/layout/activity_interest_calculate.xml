<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="${relativePackage}.${activityClass}" >
    
    
    
   <LinearLayout 
        android:layout_height="0dp"
        android:layout_weight="8.0"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/card_background_selector">
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Ac_name" />
        
        <TextView
            android:id="@+id/interestxtchooseAc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
             android:textSize="@dimen/text_size_small"
            android:hint="@string/Ac"
            android:clickable="true"
            android:background="@drawable/press"
            android:onClick="chooseAc" />

        <!-- <Button
            android:id="@+id/interestBtnchooseAc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center" /> -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>

        <TextView
            android:id="@+id/interestxtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
             android:textSize="@dimen/text_size_small"
            android:text="@string/Amount" />

        <TextView
            android:id="@+id/interestxtamountShow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             android:textSize="@dimen/text_size_small"
            android:layout_weight="1.0"
            android:text="" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_weight="0.5" >
        </LinearLayout>

        <TextView
            android:id="@+id/interestxtDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Duration" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtDateInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="@dimen/text_size_small"
                android:text="" />
            
            <ImageView
                android:id="@+id/Datepickker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_my_calendar" />
        </LinearLayout>

       
       
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
         android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>

        <TextView
            android:id="@+id/interestxtRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
             android:textSize="@dimen/text_size_small"
            android:text="@string/Rate" />

        <TextView
            android:id="@+id/interestxtrateShow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
             android:textSize="@dimen/text_size_small"
            android:text="" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>
    </LinearLayout>

    <CheckBox 
        android:id="@+id/checkBoxChooseInrest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Check if Caluclate Compound Interest"
        android:textColor="@color/Red"
        android:typeface="monospace"/>
    
    
    <TextView
        android:id="@+id/txtInrestShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/Green"
        android:layout_gravity="center_horizontal"
        android:typeface="monospace" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>

        <Button
            android:id="@+id/btnInterest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
             android:textSize="@dimen/text_size_normal"
            style="@style/btnStyleShakespeare"
            android:layout_marginRight="10dp"
            android:onClick="interest"
            android:text="@string/Interest" />

        <Button
            android:id="@+id/btnTran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
             android:textSize="@dimen/text_size_normal"
            style="@style/btnStyleShakespeare"
            android:onClick="trasaction"
            android:text="@string/Transaction" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
        </LinearLayout>
        
        
        
        
    </LinearLayout>

</LinearLayout>