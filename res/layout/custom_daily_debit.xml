<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <!-- <ImageView
            android:id="@+id/imageEntryDaily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/back"
            android:src="@android:drawable/ic_input_add" /> -->
<TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:gravity="center"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/Date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_normal"
            android:textAppearance="?android:attr/textAppearanceMedium" />
   <LinearLayout 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1.0"></LinearLayout>
        
        <Button
            android:id="@+id/button2"
            style="@style/btnStyleShakespeare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="Go" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtcredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:gravity="center"
            android:text="Debit"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_selecter"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtdebitdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Date" />

        <TextView
            android:id="@+id/textdeparti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="@string/parti" />

        <TextView
            android:id="@+id/txtAccountdebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Ac" />

        <TextView
            android:id="@+id/txtdebitcash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Cash" />

        <TextView
            android:id="@+id/txtdebittrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Tranfer" />

        <TextView
            android:id="@+id/txtdebittotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="@string/Total" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.0"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listViewDailyDebit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >
        </ListView>
    </LinearLayout>
</LinearLayout>
