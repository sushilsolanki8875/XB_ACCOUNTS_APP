<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.XB_Accounts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity_login"
            android:label="@string/title_activity_activity_login"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_accounts"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Activity_companyItems"
            android:label="@string/title_activity_activity_company_items"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity_login" />
        </activity>
        <activity
            android:name=".Activity_dailyLager"
            android:label="@string/title_activity_activity_daily_lager"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name=".Activity_salesPurchases"
            android:label="@string/title_activity_main"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Activity_printPreview"
            android:label="@string/title_activity_activity_print_preview"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".Custom_accountshowSpinner"
            android:label="@string/title_activity_custom_accountshow_spinner" >
        </activity>
        <activity
            android:name=".Custom_dailyDebit"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_custom_daily_debit" >
        </activity>
        <activity
            android:name=".Custom_dailyCredit"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_custom_daily_credit" >
        </activity>
        <activity
            android:name=".Activity_dataEntrydailyLager"
            android:label="@string/title_activity_activity_data_entrydaily_lager"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Activity_genralLager"
            android:label="@string/title_activity_activity_genral_lager"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        
        <activity
            android:name=".Activity_transaction"
            android:label="@string/title_activity_activity_transaction"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name=".Activity_Setting"
            android:label="@string/title_activity_activity__setting"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name=".Activity_SettingLanguage"
            android:label="@string/title_activity_activity__setting_language"
            android:screenOrientation="landscape" >
        </activity>

        <service
            android:name=".Custom_HindiKeyboard"
            android:label="KeyBoard Hindi"
            android:permission="android.permission.BIND_INPUT_METHOD" >
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />

            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
        </service>

        <activity
            android:name=".Activity_SettingAddNew"
            android:label="@string/title_activity_activity__add_new"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name=".Activity_transaction_Receipt"
            android:label="@string/title_activity_activity_transaction__receipt"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >
        </activity>
        <activity
            android:name=".Activity_accountChooser"
            android:label="@string/title_activity_activity_account_chooser"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name=".Activity_interestCalculate"
            android:label="@string/title_activity_activity_interest_calculate"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Activity_voucher"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_activity_voucher" >
        </activity>
        <activity
            android:name=".Activity_printDetails"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_activity_print_details" >
        </activity>
    </application>

</manifest>
